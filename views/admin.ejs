<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="admin-container">
        <h1>Admin Dashboard</h1>

        <h2>Food Donations</h2>
        <table>
            <thead>
                <tr>
                    <th>Donor</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Transfer</th>
                </tr>
            </thead>
            <tbody id="food-donations"></tbody>
        </table>

        <h2>Money Donations</h2>
        <table>
            <thead>
                <tr>
                    <th>Donor</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Transfer</th>
                </tr>
            </thead>
            <tbody id="money-donations"></tbody>
        </table>

        <h2>Seekers</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Food Needed</th>
                    <th>Money Needed</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="seekers-list"></tbody>
        </table>
    </div>

    <script>
        async function fetchData() {
            const response = await fetch("/admin/data");
            const { donations, seekers } = await response.json();

            const foodTable = document.getElementById("food-donations");
            const moneyTable = document.getElementById("money-donations");
            const seekerTable = document.getElementById("seekers-list");

            foodTable.innerHTML = "";
            moneyTable.innerHTML = "";
            seekerTable.innerHTML = "";

            // Populate Food Donations
            donations.filter(d => d.foodType).forEach(donation => {
                foodTable.innerHTML += `
                    <tr>
                        <td>${donation.name}</td>
                        <td>${donation.quantity}</td>
                        <td>${donation.status}</td>
                        <td><button onclick="transferDonation('${donation.id}')">Transfer</button></td>
                    </tr>
                `;
            });

            // Populate Money Donations
            donations.filter(d => d.amount).forEach(donation => {
                moneyTable.innerHTML += `
                    <tr>
                        <td>${donation.name}</td>
                        <td>₹${donation.amount}</td>
                        <td>${donation.status}</td>
                        <td><button onclick="transferDonation('${donation.id}')">Transfer</button></td>
                    </tr>
                `;
            });

            // Populate Seekers
            seekers.forEach(seeker => {
                seekerTable.innerHTML += `
                    <tr>
                        <td>${seeker.name}</td>
                        <td>${seeker.foodNeeded || "N/A"}</td>
                        <td>₹${seeker.moneyNeeded || "N/A"}</td>
                        <td>${seeker.status}</td>
                    </tr>
                `;
            });
        }

        // Transfer Donation
        async function transferDonation(donationId) {
            const response = await fetch("/admin/transfer", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ donationId })
            });

            const result = await response.json();
            alert(result.message);
            fetchData(); // Refresh data
        }

        fetchData();
    </script>
</body>
</html>
