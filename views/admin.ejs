<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/admin.css">
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore.js"></script>
</head>
<body>
    <div class="admin-container">
        <h1>Admin Dashboard</h1>
        
        <h2>Food Donations</h2>
        <table>
            <thead>
                <tr>
                    <th>Donor</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Transfer</th>
                </tr>
            </thead>
            <tbody id="food-donations"></tbody>
        </table>

        <h2>Money Donations</h2>
        <table>
            <thead>
                <tr>
                    <th>Donor</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Transfer</th>
                </tr>
            </thead>
            <tbody id="money-donations"></tbody>
        </table>

        <h2>Seekers</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Food Needed</th>
                    <th>Money Needed</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="seekers-list"></tbody>
        </table>
    </div>

    <script>
        // Firebase Configuration
        const firebaseConfig = {
            apiKey: "YOUR_API_KEY",
            authDomain: "YOUR_AUTH_DOMAIN",
            projectId: "YOUR_PROJECT_ID",
            storageBucket: "YOUR_STORAGE_BUCKET",
            messagingSenderId: "YOUR_MESSAGING_SENDER_ID",
            appId: "YOUR_APP_ID"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        // Fetch Donations and Seekers
        async function fetchData() {
            const foodTable = document.getElementById("food-donations");
            const moneyTable = document.getElementById("money-donations");
            const seekerTable = document.getElementById("seekers-list");

            foodTable.innerHTML = "";
            moneyTable.innerHTML = "";
            seekerTable.innerHTML = "";

            // Fetch Food Donations
            const foodDocs = await db.collection("donations").where("type", "==", "food").get();
            foodDocs.forEach(doc => {
                let data = doc.data();
                foodTable.innerHTML += `
                    <tr>
                        <td>${data.donor}</td>
                        <td>${data.quantity}</td>
                        <td>${data.status}</td>
                        <td><button onclick="transferDonation('${doc.id}', 'food')">Transfer</button></td>
                    </tr>
                `;
            });

            // Fetch Money Donations
            const moneyDocs = await db.collection("donations").where("type", "==", "money").get();
            moneyDocs.forEach(doc => {
                let data = doc.data();
                moneyTable.innerHTML += `
                    <tr>
                        <td>${data.donor}</td>
                        <td>₹${data.amount}</td>
                        <td>${data.status}</td>
                        <td><button onclick="transferDonation('${doc.id}', 'money')">Transfer</button></td>
                    </tr>
                `;
            });

            // Fetch Seekers
            const seekerDocs = await db.collection("seekers").get();
            seekerDocs.forEach(doc => {
                let data = doc.data();
                seekerTable.innerHTML += `
                    <tr>
                        <td>${data.name}</td>
                        <td>${data.foodNeeded}</td>
                        <td>₹${data.moneyNeeded}</td>
                        <td>${data.status}</td>
                    </tr>
                `;
            });
        }

        // Transfer Donation
        async function transferDonation(donationId, type) {
            await db.collection("donations").doc(donationId).update({
                status: "transferred"
            });
            alert("Donation Transferred!");
            fetchData(); // Refresh the table
        }

        // Load Data on Page Load
        fetchData();
    </script>
</body>
</html>
