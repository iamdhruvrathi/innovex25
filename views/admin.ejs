<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/css/admin.css"/>
  <style>
    .map-header, .map-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: bold;
      padding: 8px 0;
      border-bottom: 1px solid #ddd;
    }
    .map-header h3, .map-item div {
      width: 30%;
      text-align: center;
    }
    .arrow {
      width: 10%;
      text-align: center;
    }
    .assign-btn {
      width: 20%;
      text-align: center;
    }
    .assign-btn a {
      background-color: #4CAF50;
      color: white;
      padding: 6px 12px;
      text-decoration: none;
      border-radius: 5px;
      font-weight: normal;
      font-size: 14px;
    }
    .assign-btn a:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <div class="admin-container">
    <h1>Admin Dashboard</h1>

    <!-- Total Donations -->
    <section class="donation-summary">
      <h2>Total Donations</h2>
      <p><strong>Money Donated:</strong> ₹ <%= totalMoneyDonated %></p>
      <p><strong>Total Food Donated:</strong> <%= totalFoodQuantity %> Units</p>
    </section>

    <!-- Kitchens -->
    <section class="kitchen-section">
      <h2>Kitchens</h2>
      <div class="kitchens">
        <% kitchens.forEach(kitchen => { %>
          <div class="kitchen-card">
            <h3><%= kitchen.name %></h3>
            <p><strong>Address:</strong> <%= kitchen.address %></p>
            <p><strong>Daily Production:</strong> <%= kitchen.dailyProd %></p>
            <p><strong>Avg Waste:</strong> <%= kitchen.avgWaste %></p>
            <p><strong>Contact:</strong>  <%= kitchen.contact %></p>
          </div>
        <% }); %>
      </div>
    </section>

    <!-- Kitchen to Seeker Mapping -->
    <section class="mapping">
      <h2>Food Distribution</h2>
      <div class="map-container">
        <div class="map-header">
          <h3>Kitchen</h3>
          <h3>→</h3>
          <h3>Seeker</h3>
          <div class="assign-btn"></div>
        </div>
        <% randomMappings.forEach(mapping => { %>
          <div class="map-item">
            <div class="kitchen-box">
              <strong><%= mapping.kitchen.name %></strong>
            </div>
            <div class="arrow">→</div>
            <div class="seeker-box">
              <strong><%= mapping.seeker.name %></strong>
            </div>
            <div class="assign-btn">
              <a href="/notify">Assign Delivery Agent</a>
            </div>
          </div>
        <% }); %>
      </div>
    </section>
  </div>
</body>
</html>
